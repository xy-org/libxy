*def interpolatingInt~Test() {
    (assert) f"{1b}" == "1";
    (assert) f"{12ub}" == "12";
    (assert) f"{123s}" == "123";
    (assert) f"{4us}" == "4";
    (assert) f"{12345}" == "12345";
    (assert) f"{6u}" == "6";
    (assert) f"{-1234567l}" == "-1234567";
    (assert) f"{8ul}" == "8";
    (assert) f"{369z}" == "369";
}

*def interpolatingIntExplicitBase~Test() {
    num := 789024328ul;
