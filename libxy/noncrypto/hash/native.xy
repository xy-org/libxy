import libxy.noncrypto.hash.rapid;
import libxy.(string, binary);

NativeHashBits := Bits64;

;; Fastest & Best hash available for the platform.
struct NativeHash {
    seed : NativeHashBits;; You can specify this to add some extra entropy
}

*func hash(str: Str, hash: NativeHash) = hash(str.addr, str.size, hash);

*func hash(blob: Blob, hash: NativeHash) = hash(blob.addr, blob.size, hash);

*func hash(data: Ptr~Byte, len: Size, hash: NativeHash) =
    hash(data, len, RapidHash64{hash.seed});
