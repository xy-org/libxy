;; Enum is like {Flag} but only one value is allowed a.k.a. enumeration
*struct Enum {
    value: Int;
}

;; Set {value} to {enm} if {on}
*func set(
    value: mut (Byte, Ubyte, Short, Ushort, Int, Uint), enm: Enum, on: Bool
) if (on) value = enm.value'to(%value);

;; Check if {value} is equal to the {enm}
*func get(value: (Byte, Ubyte, Short, Ushort, Int, Uint), enm: Enum) =
    value == enm.value'to(%value);